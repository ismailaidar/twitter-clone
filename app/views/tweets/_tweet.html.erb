<div class="col mb-2">
    <div class="tweet card">
        <div class="card-header">
            
            <% if tweet.user.avatar.attached? %>
                <%= image_tag(tweet.user.avatar, :class => 'rounded-circle', 
                    :style => 'height:50px; width:50px') %>
            <% else %>
                <img 
                    src="https://moonvillageassociation.org/wp-content/uploads/2018/06/default-profile-picture1.jpg"
                    style='height:50px; width:50px' class='rounded-circle'>
            <% end %>
            
            <span class="username"><%= tweet.user.username %></span>
            <span class="ml-2 date"><%= tweet.created_at.localtime %></span>
        </div>
        <div class="card-body">
            <p>
                <%= tweet.body %>
            </p>
        </div>
        <div class="card-header d-flex justify-content-between">
            <div>
                <!-- 
                <%= form_with(model: @like, local: true) do |form| %>
                    <%= form.submit 'Like', class: 'btn btn-success btn-sm' %>
                    <%= form.hidden_field :tweet_id, value: tweet.id %>
                <% end %>
                -->
                <button 
                        class='btn btn-success btn-sm'
                        data-reflex="click->TweetReflex#like_tweet"
                        data-tweetId="<%= tweet.id %>"
                        data-userId="<%= current_user.id %>"
                >Like</button>
                <span class="linkes" id="likes-<%= tweet.id %>">
                    <%= tweet.likes.count %>
                </span>
            </div>
            <div>
                <button>Retweet</button>
                <span class="linkes">33</span>
            </div>
            <div>
                <button>Comment</button>
                <span class="linkes">154</span>
            </div>
        </div>
    </div>
</div>